{
  "settings": {
    "index": {
      {# non-serverless-index-settings-marker-start #}{%- if build_flavor != "serverless" or serverless_operator == true -%}
      {% if preload_pagecache %}
      "index.store.preload": [ "vec", "vex", "vem"],
      {% endif %}
      "number_of_shards": {{number_of_shards | default(1)}},
      "number_of_replicas": {{number_of_replicas | default(0)}}
      {%- endif -%}{# non-serverless-index-settings-marker-end #}
    }
  },
  "mappings": {
    "dynamic": false,
    "_source": {
      "enabled": false
    },
    "properties": {
      {%- if corpora == "deep1b" -%} "vector": { {%- elif corpora == "openai" -%} "emb": { {%- elif corpora == "so" -%} "titleVector": { {%- else -%} "emb": { {%- endif -%}
        "type": "dense_vector",
        "element_type": "float",
        "dims": {%- if corpora == "deep1b" -%} 96 {%- elif corpora == "openai" -%} 1536 {%- elif corpora == "so" -%} 768 {%- else -%} 1536 {%- endif -%},
        "index": true,
        "similarity": "dot_product",
        {%- if "flat" in vector_index_type -%}
        "index_options": {
          "type": {{ vector_index_type | tojson }}
        }
        {%- else -%}
        "index_options": {
          "type": {{ vector_index_type | default("int8_hnsw") | tojson }},
          "m": 16,
          "ef_construction": 100
        }
        {%- endif -%}
      }
    }
  }
}
